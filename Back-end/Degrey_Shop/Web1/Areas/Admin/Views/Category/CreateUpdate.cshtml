@{
    //Load file Layout.cshtml
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";

}

@using Web1.Models;


<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-8">
                <div class="card" style="padding:20px;">
                    <div class="card-header">
                        <h4 class="card-title">Categories Control</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data" action="@ViewBag.action">

                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-3 px-1">
                                    <div class="form-group">
                                        <label>Category Name</label>
                                        <input type="text" value="@if(Model != null){
                                        <text>@Model.Name</text>
                                        }" name="Category" class="form-control" required>
                                    </div>
                                </div>                                                             
                            </div>                                                                                

                            <div class="row" style="margin-top:5px;">
                                <div class="col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary">
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>