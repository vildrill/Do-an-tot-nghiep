@model Web1.Models.ItemSanPham

@{
    //Load file Layout.cshtml
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";

}


<div class="content">
    <div class="container">
        <div class="row">
            <form method="post" action="CreatePost">

                <div class="col-lg-5">
                    <div class="card" style="padding:20px;">
                        <div class="card-header">
                            <h4 class="card-title">Color Control</h4>
                        </div>

                        <div class="card-body">
                            <div class="form-group mt-5">

                                <div class="col-sm-9">
                                    <label for="name">@Model.Name</label>
                                    <input type="hidden" id="Id_Product" name="Id_Product" value="@Model.Id_Product" />ID: @Model.Id_Product
                                </div>

                            </div>


                            <div class="form-group mt-5">
                                <label for="name">Name</label>
                                <input id="name" name="name" class="form-control">
                            </div>


                         



                       



                            <div class="row">
                                <div class="col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </form>
        </div>


    </div>
</div>




