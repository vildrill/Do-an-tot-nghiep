@model Web1.Models.ItemKichCo

@{
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="container">
    <form method="post" action="/Admin/Size/UpdatePost">
        <div class="row">
            <div class="col-6">
                <div class="card" style="padding:20px;">
                    <div class="card-header">
                        <h4 class="card-title">Size Control</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group mt-5">
                            <div class="col-sm-9">
                                <label for="Id_Size">ID Size</label>
                                <input type="text" id="Id_Size" name="Id_Size" value="@Model.Id_Size" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="form-group mt-5">
                            <label for="name">Name</label>
                            <input id="name" name="name" value="@Model.Name" class="form-control">
                        </div>
                        <div class="mt-4">
                            <div class="col-md-10">
                                <input type="submit" value="Save" class="btn btn-primary">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
