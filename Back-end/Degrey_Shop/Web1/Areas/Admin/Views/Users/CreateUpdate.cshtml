@{
    //Load file Layout.cshtml
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";

}

@using Web1.Models;

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card" style="padding:20px;">
                    <div class="card-header">
                        <h4 class="card-title">Profile User Control</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" action="@ViewBag.action">
                            <div class="row">
                                <div class="col-md-3 px-1">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" value="@if(Model != null){<text>@Model.Name</text>}" name="name" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-4 pl-1">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input type="email" value="@if(Model != null){<text>@Model.Email</text>}"
                                        name="email" @if(Model != null){<text>disable</text>} class="form-control" required>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Phone</label>
                                        <input type="number" name="Phone" @if(Model != null){
                                        <text>placeholder="Phone"</text>}
                                        else{
                                        <text>required</text>} class="form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <input type="text" name="address" @if(Model != null){
                                        <text>placeholder="Address"</text>}
                                        else{
                                        <text>required</text>} class="form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" name="password" @if(Model != null){
                                        <text>placeholder="Password"</text>}
                                        else{
                                        <text>required</text>} class="form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary">
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>