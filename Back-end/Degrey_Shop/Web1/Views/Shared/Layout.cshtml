                    <h5 class="modal-title h3 font-weight-bold" id="confirmModalLabel">Notification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <i class="fas fa-exclamation-triangle fa-2x mx-2"></i> Are you sure?
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn font-weight-bold" data-bs-dismiss="modal">No</button>
                    <button id="confirmBtn" type="button" class="btn btn-dark font-weight-bold">Yes</button>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("~/Views/Shared/Menu.cshtml")

