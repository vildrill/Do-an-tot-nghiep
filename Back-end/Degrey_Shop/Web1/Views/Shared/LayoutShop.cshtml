@using Web1.Models
@functions {
    public MyDB db = new MyDB();
   
}


<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Male_Fashion Template">
    <meta name="keywords" content="Male_Fashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Degrey Viet Nam</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap"
          rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/PageAsset/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/PageAsset/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/PageAsset/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/PageAsset/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/PageAsset/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/PageAsset/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/PageAsset/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/PageAsset/css/style.css" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

        @Html.Partial("~/Views/Shared/Menu.cshtml")

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Product</h4>
                        <div class="breadcrumb__links">
                            <a href="/Home">Home</a>
                            <span>Product</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="shop__sidebar">
                        <div class="shop__sidebar__search">
                            <form action="#">
                                <input type="text" placeholder="Search...">
                                <button type="submit"><span class="icon_search"></span></button>
                            </form>
                        </div>
                        <div class="shop__sidebar__accordion">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseOne">Category</a>
                                    </div>
                                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            @{
                                                IQueryable<ItemLoaiSP> query = db.Categories;
                                            }
                                            <div class="shop__sidebar__categories">
                                                <ul class="nice-scroll">
                                                    <li><a href="@Url.Action("Index", "Product", new { fk_Id_Category = 0, filter = @ViewBag.filter })">All product</a></li>
                                                    @foreach (var item in query)
                                                    {
                                                        <li><a href="@Url.Action("Index", "Product", new { fk_Id_Category = item.Id_Category, filter = @ViewBag.filter })">@item.Name</a></li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>                               
                                                             
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="shop__product__option">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__left">
                                    <p class="h4">
                                        Product type: @ViewBag.Categories
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__right">
                                    <p>Filter:</p>
                                    <select id="priceFilter" onchange="location = this.value;">
                                        <option value="@Url.Action("Index", "Product", new { fk_Id_Category = ViewBag.fk_Id_Category, filter = 0 })">Low to high</option>
                                        <option value="@Url.Action("Index", "Product", new { fk_Id_Category = ViewBag.fk_Id_Category, filter = 1 })">High to low</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        @RenderBody()

                  

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Section End -->

                @Html.Partial("~/Views/Shared/Footer.cshtml")

    
    <!-- Js Plugins -->
    <script src="~/PageAsset/js/jquery-3.3.1.min.js"></script>
    <script src="~/PageAsset/js/bootstrap.min.js"></script>
    <script src="~/PageAsset/js/jquery.nice-select.min.js"></script>
    <script src="~/PageAsset/js/jquery.nicescroll.min.js"></script>
    <script src="~/PageAsset/js/jquery.magnific-popup.min.js"></script>
    <script src="~/PageAsset/js/jquery.countdown.min.js"></script>
    <script src="~/PageAsset/js/jquery.slicknav.js"></script>
    <script src="~/PageAsset/js/mixitup.min.js"></script>
    <script src="~/PageAsset/js/owl.carousel.min.js"></script>
    <script src="~/PageAsset/js/main.js"></script>
</body>

</html>